{
  "kind": "collectionType",
  "collectionName": "schools",
  "info": {
    "name": "school"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "principalName": {
      "type": "string",
      "required": true
    },
    "address": {
      "type": "text",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "phoneNumber": {
      "type": "biginteger",
      "required": true
    },
    "scholarships": {
      "via": "schools",
      "collection": "scholarship",
      "dominant": true
    },
    "image": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "article": {
      "type": "component",
      "repeatable": false,
      "component": "article.article"
    },
    "POC": {
      "type": "component",
      "repeatable": true,
      "required": true,
      "component": "user.poc"
    },
    "students": {
      "via": "school",
      "collection": "student"
    }
  }
}
